<section class="post-list">
    <div class="create-btn-wrapper">
        <button id="create-post" class="btn">Create New Post</button>  
    </div>
    {{#if posts.length}}
    {{#each posts as |post|}}
    <div class="post-item">
        <div class="post-item-head">
            <a href="/post/{{post.id}}" class="post-item-title">{{post.title}}</a>
            <span class="post-item-meta">Posted on {{format_date post.created_at}}</span>
        </div>
        <div class="post-item-body">
            <span class="post-item-text">
                {{post.text}}
            </span>
            <div class="post-comment-badge">
                Comments: <span class="data">{{post.comments.length}}</span>
            </div>
        </div>
    </div>
    {{/each}}
    {{/if}}
</section>

<script src="/js/dashboard.js"></script>