<section class="post-list">
    {{#each posts as |post|}}
    <div class="post-item">
        <div class="post-item-head">
            <a href="/post/{{post.id}}" class="post-title">{{post.title}}</a>
            <span class="post-meta">Posted by <span class="username">{{post.user.username}}</span> on {{format_date post.created_at}}</span>
        </div>
        <div class="post-item-body">
            <span class="post-text">
                {{post.text}}
            </span>
            <div class="post-comment-badge">
                Comments: <span class="data">{{post.comments.length}}</span>
            </div>
        </div>
    </div>
    {{/each}}
</section>