<section class="form-container">
    <form id="signup-form" class="form-card">
        <div class="form-input">
            <input name="signup-email" id="signup-email" type="text" placeholder="Email" class="form-input">
        </div>
        <div class="form-input">
          <input name="signup-username" id="signup-username" type="text" placeholder="Username" class="form-input">
        </div>
        <div class="form-input">
            <input name="signup-password" id="signup-password" type="password" placeholder="Password (must be at least 4 characters long" class="form-input">
        </div>
        <div class="submit-btn-wrapper">
          <button id="signup-btn" type="submit" class="btn form-btn">Sign Up</button>
        </div>
    </form>
</section>

<script src="/js/signup.js"></script>