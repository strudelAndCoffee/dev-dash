<div class="post-full">
    <div class="post-head">
        <span class="post-title">{{post.title}}</span>
        <span class="post-meta">Posted by {{post.user.username}} on {{format_date post.created_at}}</span>
    </div>
    <div class="post-text">{{post.text}}</div>
</div>

{{> comments post.comments }}