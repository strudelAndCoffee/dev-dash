<section class="single-post">
    <div class="post-container">
        {{#if currentUser}}
        <div class="post-buttons">
            <button id="edit-post" class="btn">Edit Post</button>
            <button id="delete-post" class="btn danger">Delete Post</button>
        </div>
        {{/if}}
        <div class="post">
          <div class="post-head">
              <h2 class="post-title">{{post.title}}</h2>
              <p class="post-meta"><span class="username">{{post.user.username}}</span> ({{format_date post.created_at}})</p>
          </div>
          <div class="post-body">
            <span class="post-text">
              {{post.text}}
            </span>
          </div>
        </div>

        <div class="comments">
            <div class="comment-list">
                {{> comments post.comments }}
            </div>
                {{#if loggedIn}}
                <div class="add-comment-container">
                    <form id="add-comment-form" class="add-comment-form">
                        <textarea id="comment-text" class="add-comment-text" type="text" placeholder="Leave a comment here"></textarea>
                        <button id="add-comment-btn" class="btn">Add Comment</button>
                    </form>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>

{{#if loggedIn}}
    {{#if currentUser}}
    <script src="/js/edit-delete.js"></script>
    {{/if}}
    <script src="/js/comment.js"></script>
{{/if}}